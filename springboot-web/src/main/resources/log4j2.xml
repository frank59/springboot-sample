<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- 变量配置 -->
    <Properties>
        <property name="basePath">./logs</property>

    </Properties>
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <RollingRandomAccessFile name="ERROR_APPENDER" fileName="${log_path}/error.log"
                                 filePattern="${log_path}/error_%d{yyyy-MM-dd}.log">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p - %F:%L[%t] - %m%n"/>
            <DefaultRolloverStrategy max="30" />
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="SERVICE_APPENDER" fileName="${log_path}/service.log"
                                 filePattern="${log_path}/service_%d{yyyy-MM-dd}.log">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p [%t] - %F:%L - %m%n"/>
            <DefaultRolloverStrategy max="30" />
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <root level="info">
            <AppenderRef ref="CONSOLE"/>
        </root>
        <logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="CONSOLE"/>
        </logger>
        <logger name="com" level="INFO" additivity="false">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="ERROR_APPENDER"/>
        </logger>
        <logger name="APP" level="INFO" additivity="false">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="SERVICE_APPENDER"/>
        </logger>
        <logger name="SERVICE" level="INFO" additivity="false">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="SERVICE_APPENDER"/>
        </logger>
    </Loggers>
</Configuration>